        // Function to update vehicle brand options based on vehicle make
        function updateVehicleBrandOptions() {
            const vehicleMake = document.getElementById("vehicleMake").value;
            const vehicleBrandSelect = document.getElementById("vehicleBrand");

            // Clear the existing options
            vehicleBrandSelect.innerHTML = "";
            
            // Add default option
            const defaultOption = document.createElement("option");
            defaultOption.value = "";
            defaultOption.textContent = "Select brand";
            defaultOption.disabled = true;
            defaultOption.selected = true;
            vehicleBrandSelect.appendChild(defaultOption);

            // Options based on vehicle make
            let options = [];
            if (vehicleMake === "Bike") {
                options = ["Hero", "Yamaha", "Honda", "Bajaj", "Suzuki", "Royal Enfield", ];
            } else if (vehicleMake === "Car") {
                options = ["Toyota", "Honda", "Ford", "BMW", "Mercedes"];
            }

            // Create and append new options
            options.forEach(brand => {
                const option = document.createElement("option");
                option.value = brand;
                option.textContent = brand;
                vehicleBrandSelect.appendChild(option);
            });
        }

        // Animation and form progress functionality
        window.onload = function() {
            const animatedElements = document.querySelectorAll('.animate-in');
            const formProgress = document.getElementById('formProgress');
            const formSections = document.querySelectorAll('.form-section');
            const form = document.getElementById('enquiryForm');
            
            // Animate sections on load
            setTimeout(() => {
                animatedElements.forEach((element, index) => {
                    setTimeout(() => {
                        element.classList.add('visible');
                    }, index * 150);
                });
            }, 200);
            
            // Form validation progress
            function updateProgress() {
                const inputs = form.querySelectorAll('input, select, textarea');
                let filledCount = 0;
                
                inputs.forEach(input => {
                    if (input.value.trim() !== '') {
                        filledCount++;
                    }
                });
                
                const progressPercentage = (filledCount / inputs.length) * 100;
                formProgress.style.width = progressPercentage + '%';
            }
            
            // Add input event listeners to all form elements
            const formElements = form.querySelectorAll('input, select, textarea');
            formElements.forEach(element => {
                element.addEventListener('input', updateProgress);
                element.addEventListener('change', updateProgress);
            });
            
            // Initialize progress bar
            updateProgress();
        };
    </script>
